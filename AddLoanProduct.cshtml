@{
    Layout = "~/Views/Shared/AdminUtility.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Loan Product - Admin</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="addloanproduct.css">
</head>
<body>
    <div class="d-flex" id="wrapper">
        <div id="page-content-wrapper" class="w-100">

            <div class="container-fluid p-4 p-lg-5">
                <div class="mb-4">
                    <h1 class="h2 fw-bold">Create New Loan Product</h1>
                    <p class="text-muted lead fs-6">Define the terms and details for a new loan offering to expand our portfolio.</p>
                </div>

                <div class="row">
                    <div class="col-lg-10 offset-lg-1">
                        <div class="card custom-card">
                            <div class="card-header">
                                <i class="fas fa-edit me-2"></i>Loan Product Details
                            </div>
                            <div class="card-body p-4 p-lg-5">
                                <form id="loanProductForm">
                                    <div class="mb-4">
                                        <label for="productName" class="form-label"><i class="fas fa-tag me-2 text-primary"></i>Product Name</label>
                                        <input type="text" class="form-control form-control-lg" id="productName" name="productName" required placeholder="e.g., Premium Home Loan, Quick Personal Finance">
                                    </div>

                                    <div class="row g-4 mb-4">
                                        <div class="col-md-6">
                                            <label for="interestRate" class="form-label"><i class="fas fa-percentage me-2 text-primary"></i>Interest Rate</label>
                                            <div class="input-group input-group-lg">
                                                <input type="number" class="form-control" id="interestRate" name="interestRate" step="0.01" required placeholder="e.g., 5.75">
                                                <span class="input-group-text">%</span>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <label for="tenure" class="form-label"><i class="fas fa-calendar-alt me-2 text-primary"></i>Maximum Tenure</label>
                                            <div class="input-group input-group-lg">
                                                <input type="number" class="form-control" id="tenure" name="tenure" required placeholder="e.g., 120">
                                                <span class="input-group-text">months</span>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row g-4 mb-4">
                                        <div class="col-md-6">
                                            <label for="minAmount" class="form-label"><i class="fas fa-dollar-sign me-2 text-primary"></i>Minimum Loan Amount</label>
                                            <div class="input-group input-group-lg">
                                                <span class="input-group-text">₹</span>
                                                <input type="number" class="form-control" id="minAmount" name="minAmount" step="100" required placeholder="e.g., 1000">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <label for="maxAmount" class="form-label"><i class="fas fa-coins me-2 text-primary"></i>Maximum Loan Amount</label>
                                            <div class="input-group input-group-lg">
                                                <span class="input-group-text">₹</span>
                                                <input type="number" class="form-control" id="maxAmount" name="maxAmount" step="1000" required placeholder="e.g., 500000">
                                            </div>
                                        </div>
                                    </div>

                                    <div class="mb-4">
                                        <label for="loanType" class="form-label"><i class="fas fa-list-ul me-2 text-primary"></i>Loan Type</label>
                                        <select class="form-select form-select-lg" id="loanType" name="loanType" required>
                                            <option selected disabled value="">Choose loan category...</option>
                                            <option value="home">Home Loan</option>
                                            <option value="personal">Personal Loan</option>
                                            <option value="car">Car Loan</option>
                                            <option value="education">Education Loan</option>
                                            <option value="business">Business Loan</option>
                                            <option value="other">Other</option>
                                        </select>
                                    </div>

                                    <div class="mb-4">
                                        <label for="productDescription" class="form-label"><i class="fas fa-info-circle me-2 text-primary"></i>Description (Optional)</label>
                                        <textarea class="form-control form-control-lg" id="productDescription" name="productDescription" rows="4" placeholder="Briefly describe the loan product, its benefits, and target audience..."></textarea>
                                    </div>

                                    <hr class="my-4">

                                    <div class="text-end">
                                        <button type="button" class="btn btn-outline-secondary btn-lg me-2 px-4"><i class="fas fa-times me-2"></i>Cancel</button>
                                        <button type="submit" class="btn btn-primary btn-lg px-4"><i class="fas fa-save me-2"></i>Save Product</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="addloanproduct.js"></script>
</body>
</html>